//Exercises:


// 1. A function that takes in two numbers and returns true if the first number is larger than the second number. Otherwise, it should return false.
function numberCheck(num1,num2){
  if (num1>num2){
    return true;
  } else {
    return false;
  }
}

numberCheck(5,2); //to test if a bigger num1 will return true
numberCheck(1,2); //to test if a smaller num1 will return false

// 2. A function that takes in an array of numbers, and returns the third number in the array.

function thirdInArray(array){
  return [array[2]];
}

thirdInArray([1,2,3]); //to test if the function will return the third number.
thirdInArray([1,5]); //to test if undefined will be returned due to no third number
thirdInArray([1,2,3,4,5,6,7,8,9]); //to test if the function works in a much longer array.

// 3. A function that takes 3 numbers as parameters. The 3 parameters are called min, max, and target. Return whether target number is between the min and the max (inclusive).

function betweenTest(min,max,target){
  if (target<max && target>min){
    return true;
  } else {
    return false;
  }
}

betweenTest(1,10,5); //testing if target number is inclusive will return true.
betweenTest(1,10,15);//testing if target number is greater than max will return false.
betweenTest(1,10,-3);//testing if target number is less than min will return false.

// 4. A function that takes in a number, and prints the word "Hello" that many times.

function repeatingMessage(message,reps){
  return message.repeat(reps);
}

repeatingMessage("Hello",10); //testing to see if function works
repeatingMessage("Hello",0); //testing if empty string will print with 0 
repeatingMessage("Hello"); //testing if empty string will print with no rep element specified
repeatingMessage("Hello",1000); //testing to see if function runs with large rep number